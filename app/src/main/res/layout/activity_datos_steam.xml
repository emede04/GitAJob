<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/fondo"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/charla"
        android:layout_width="398dp"
        android:layout_height="284dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="1dp"
        android:paddingRight="10dp"
        android:text="@string/charla"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/clavedesteam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bVerificar"
        android:layout_width="124dp"
        android:layout_height="51dp"
        android:layout_marginStart="158dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="187dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clavedesteam" />

    <EditText
        android:id="@+id/clavedesteam"
        android:layout_width="287dp"
        android:layout_height="66dp"
        android:layout_marginStart="94dp"
        android:layout_marginEnd="108dp"
        android:ems="10"
        android:textColor="@color/white"
        android:hint="@string/id_default"
        android:inputType="text"
        android:text="@string/id_default"
        app:layout_constraintBottom_toTopOf="@+id/bVerificar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.41"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/charla" />
</androidx.constraintlayout.widget.ConstraintLayout>